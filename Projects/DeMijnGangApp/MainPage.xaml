<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeMijnGangApp.MainPage"
             xmlns:viewmodel="clr-namespace:DeMijnGangApp.ViewModel">

    <Grid RowDefinitions="100, Auto, *" ColumnDefinitions=".75*, .25*" Padding="10">
        <Image Grid.ColumnSpan="2" Source="dotnet_bot.png" BackgroundColor="Orange" />
        <CollectionView Grid.Row="2" Grid.ColumnSpan="2" ItemsSource="{Binding Events}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0,5">
                        <Frame>
                            <HorizontalStackLayout Padding="5" Spacing="5">
                                <Label Text="{Binding Id, StringFormat='ID: {0} ~ '}" FontSize="24" />
                                <Label Text="{Binding Title}" FontSize="24"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>
